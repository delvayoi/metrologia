{% extends '::base.html.twig' %}
{% block javascripts %}

{% endblock %}

{% block body -%}
    <h1>Instructiva list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Codigo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
           
           
             
        {% for entity in entities %}
           {% if entity.estadoid.estado == 'derogado' %}
           <tr style="color: red">
           
                <td><a href="{{ path('instructiva_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.codigo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('instructiva_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('instructiva_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
         
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('instructiva_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
