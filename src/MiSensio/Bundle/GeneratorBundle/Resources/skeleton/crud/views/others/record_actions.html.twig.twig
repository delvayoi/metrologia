         <td style="border: 0px">        
          <form action="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}"  method="post">     
             <input type = "submit" name = "modificar" value="Modificar" class="btn btn-sm btn-primary"/> 
          </form>     
         </td>      
    {% endif %}
        {% if ('delete' in actions) and (not hide_delete) %}
         <td style="border: 0px">
            {{ '{{ form(delete_form) }}' }}
         </td>      
        {% endif %}
    </tr>  
</table> 